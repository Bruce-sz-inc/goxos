#!/bin/sh

go build
BUILD=$?

if [ $BUILD -ne 0 ]; then
	echo "go build failed"
	exit
fi

N=2
OUT=k

for i in `seq 0 $N`; do
  echo "Starting $i..."
  ./bftpubsub -v=3 -log_dir=./log/ -id $i -all-cores -config-file config-authbc.ini &
done

echo "Running. Press enter to stop."

read && killall bftpubsub 
